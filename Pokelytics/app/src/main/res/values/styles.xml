<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonOutlinedWhite" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">20dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="buttonOutlinedBlue" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="buttonOutlinedRoundBlue" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:drawableTop">@drawable/ic_arrow_left</item>
        <item name="android:shape">oval</item>

    </style>
</resources>